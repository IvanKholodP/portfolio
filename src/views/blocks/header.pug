header.section.header
	.header_body
		.header__socials
			ul.socials
				each icon in ['fb', 'github', 'in']
					li.socials__item
						a(href="#" target="_blank").socials__link
							svg.socials__icon
								use(href=`#${icon}`)
		.header__burger
			span
		nav.header__menu
			ul.nav-menu
				each link in ['Мої роботи', "Про мне", "Блог", "Авторизація"]
					li.nav-menu__list
						a(href="#").nav-menu__link= link
section.section.hero
	.hero__bg
		img(src="./img/bg.png", alt="").hero__bg-img
	a(href="").down-arrow
		svg.down-arrow__icon
			use(href="#arrow_down")
	.hero__title
		img(src="./img/decor/vector_header.png", alt="").section-title
		.user.hero__user-block
			.user__photo
				.user__photo-avatar
					img(src="./img/avatar.jpg", alt="").user__photo-img
			.user__name Іван Холод
			.user__desc Особистий сайт Front-end Developer